{
  "manifest_version": 3,
  "name": "Mindful X Blocker",
  "description": "Encourages mindful usage of X (Twitter) by introducing intentional reflection and timed sessions before granting access.",
  "version": "0.1.0",
  "action": {
    "default_title": "Mindful Session"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "*://*.x.com/*",
    "*://*.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://*.twitter.com/*"
      ],
      "js": ["content/timer.js"],
      "css": ["content/timer.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
